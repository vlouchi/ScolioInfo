<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/logos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="8sp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logotransparent"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/apa_itu_skoliosis"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Apa itu skoliosis?"
        android:layout_below="@id/logos"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/kurva_skoliosis"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kurva Skoliosis"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/gejala"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Gejala"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/perawatan"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Perawatan"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/pencegahan"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="pencegahan"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        />

      </LinearLayout>
